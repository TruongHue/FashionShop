@model SanPhamModel
@{
    ViewData["title"] = "Thêm sản phẩm";
}
<h4>Thêm sản phẩm</h4>
<div class="col-md-9">
    <form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>Name</label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"/>
        </div>
        <div class="form-group">
            <label>Giá</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger" />
        </div>
        <div class="form-group">
            <label>mô tả</label>
            <textarea asp-for="Description" class="form-control" ></textarea>
            <span asp-validation-for="Description" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Danh mục</label>
            <select asp-for="DanhMucId" class="form-control" asp-items="ViewBag.Danhmucs">
                <option>--Chọn danh mục</option>
            </select>
            <span asp-validation-for="DanhMucId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Thương Hiệu</label>
            <select asp-for="ThuongHieuId" class="form-control" asp-items="ViewBag.ThuongHieus">
                <option>--Chọn thương hiệu</option>
            </select>
            <span asp-validation-for="ThuongHieuId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Hình ảnh</label>
            <input asp-for="ImageUpload" class="form-control-file" />
            <span asp-validation-for="ImageUpload" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button class="btn btn-primary"> Thêm</button>
        </div>
    </form>
    <a asp-action="Index">Trở về</a>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}